{
  "env": {
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": "off",
    "indent": ["error", 2],
    "import/extensions": "off",
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": "off",
    "max-len": "warn",
    "import/prefer-default-export": "off",
    "no-param-reassign": "warn",
    "quotes": "off"
  }
}
